@using ITLATV_.Core.Application.ViewModels.Producers;
@model List<ProducerViewModel>
@{
    ViewData["Title"] = "Producers";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Producer" asp-action="Create" class="btn btn-outline-success fw-bold rounded-pill btn-lg">Add new producer</a>
        </div>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <br>
            <h2>There is not producers.</h2>
        }
        else
        {
            @foreach (ProducerViewModel item in Model)
            {
                <div class="col-4">
                    <div class="card shadow-sm">

                        <div class="card-body">
                                    <img class="bd-placeholder-img card-img-top img-height" src="@item.ImgPath" />
                            <h4 class="card-title">@item.Name</h4>
                                    <p class="card-text">the Productor Company <strong>@item.Name</strong> has produced a total of @item.SeriesCount of the registered series on system.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Producer" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning fw-bold">Edit</a>
                                    <a asp-controller="Producer" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger fw-bold">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>