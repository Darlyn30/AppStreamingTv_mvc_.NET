<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITLATV_</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ITLATV_.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

        @{
            var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
            var action = ViewContext.RouteData.Values["Action"]?.ToString();
        }

        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AppStreamingTv</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "Home" ? "active fw-bold" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "Gender" ? "active fw-bold" : "")" asp-area="" asp-controller="Gender" asp-action="Index">Genders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(controller == "Producer" ? "active fw-bold" : "")" asp-area="" asp-controller="Producer" asp-action="Index">Producers</a>
                        </li>
                    </ul>

                    <div class="container-fluid">
                        <form method="post" asp-controller="Home" asp-action="Search" class="d-flex" role="search">
                            <input name="serieName" class="form-control me-2" placeholder="The Walking Dead..." aria-label="Search">
                            <button type ="submit" class="btn btn-outline-success">Search</button>
                        </form>
                    </div>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - ITLATV+
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
