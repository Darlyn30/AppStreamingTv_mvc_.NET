@using ITLATV_.Core.Application.ViewModels.Genders;
@model List<GenderViewModel>
@{
    ViewData["Title"] = "Genders";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Gender" asp-action="Create" class="btn btn-outline-success fw-bold rounded-pill btn-lg">Add new Gender</a>
        </div>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <br>
            <h2>There is not Genders.</h2>
        }
        else
        {
            @foreach (GenderViewModel item in Model)
            {
                <div class="col-3">
                    <div class="card shadow-sm">                       

                        <div class="card-body">
                            <h4 class="card-title">@item.Name</h4>
                            <p class="card-text">This genre is used by a total of @item.SeriesCount series on system.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Gender" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning fw-bold">Edit</a>
                                    <a asp-controller="Gender" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger fw-bold">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>
